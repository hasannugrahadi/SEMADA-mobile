<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.app.semada.ui.dashboard.DashboardFragment"
        android:label="Home"
        tools:layout="@layout/fragment_dashboard" />

    <activity
        android:id="@+id/navigation_presensi"
        android:name="com.app.semada.ui.presensi.PresensiActivity"
        android:label="Presensi"
        tools:layout="@layout/activity_presensi" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.app.semada.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>